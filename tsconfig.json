{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es2020"
        ],
        "jsx": "react-jsx",
        "target": "es2020",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "types": ["react", "react-dom"],
        "typeRoots": ["./node_modules/@types"],
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    }
} 